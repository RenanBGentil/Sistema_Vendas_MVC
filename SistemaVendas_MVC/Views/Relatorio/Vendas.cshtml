@model RelatorioModel
<h1>Vendas Por Período</h1>

<form asp-controller="Relatorio" asp-action="Vendas">

    <div class="form-group">
        <label >Período</label>
        <input type="date" asp-for="DataDe"  class="form-control" />    
    </div>

    <div class="form-group">
        <input type="date" asp-for="DataAte" class="form-control"  />
    </div>

    <button type="submit" class="btn btn-block btn-success">Pesquisar</button>
</form>
<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Data</th>
            <th>Vendedor</th>
            <th>Cliente</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>

        @{


            try
            {

                foreach (var item in (List<VendaModel>)ViewBag.ListaVendas)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Data</td>
                        <td>@item.Cliente_Id</td>
                        <td>@item.Vendedor_Id</td>
                        <td>R$ @item.TotalVenda</td>
                    </tr>
                }
            }
            catch 
            {

            }
        }

    </tbody>
</table>